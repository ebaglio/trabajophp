 <?php

      class auto
     {
             var $llantas = 4;
             var $color = "azul";
             var $velocidad = 30;
             public function acelerar($velocidad)
             {
                     $this->velocidad += $velocidad;
                     return $velocidad;
             }

             public function frenar($velocidad)
             {
                     $this->velocidad -= $velocidad;
                     return $velocidad;
             }

             public function parar( )
             {
                     $this->velocidad = 0;
             }
     }
     ?>